<!-- Begin Portfolio -->
<section id="section2" class="portfolio clearfix">


	<div class="content container">
		<div class="title grid-full">
			<h2 id="releaseHeader">Releases</h2>
			<span class="border"></span>
		</div>
	</div>
	<div id="releaseShowWrapper" style="display:none;">
	
		<div class="closeRelease grid-full">
			<a data-remote="true" href="#" id="removeRelease"><i class="icon-remove"></i></a>               
		</div>
		<div class="ajax-content clearfix"></div>
	
		<div id="releaseShowContent">
			<div id="ajaxpage" class="container">

				<div class="col-md-6 releaseInfo">
					<%= image_tag(@release.packshot, class: "image") %><br/><br/>
					<iframe width="100%" height="20" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/289132735%3Fsecret_token%3Ds-Kc9rf&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=false&amp;show_reposts=false&amp;visual=false&amp;show_artwork=false"></iframe>
				</div>
				<div class="project-title grid-full">
				</div>

				<div class="clearfix">
					<div class="col-md-6 description">
						<p>Mechanism is released on vinyl, CD and digital download January 2017<br/><br/>

							The full tracklisting to Mechanism is as follows:

							<ul>
								<li>Sliberblick</li>
								<li>Hyena</li>
								<li>You Caught Up</li>
								<li>Southend After Everyone Has Left</li>
								<li>Turncoat</li>
								<li>Motorbath</li>
								<li>Bad Habits</li>
								<li>Ridges</li>
								<li>Everybody Runs</li>
							</ul><br/>
							<span class="bold">Pre-order now:</span>
							<br/><br/><ul>
								<li><a href="https://itunes.apple.com/gb/album/mechanism/id1168039908" target="_blank">iTunes</a></li>
								<li><a href="https://www.roughtrade.com/music/mechanism" target="_blank">Rough Trade</a></li>
							</ul>
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
	
	<ul id="portfolio-grid" class="projectlist clearfix">
		<% @releases.each do |r| %>
			<li class="project">
				<input type="hidden" value=<%= r.id %> class="modal-object-id">
				<%= link_to '#', :remote => 'true', :class => 'releaseClick' do %>
					<%= image_tag r.packshot.url(:medium, :alt => "thumbnail") %>
					<div class="projectinfo">
						<div class="meta">
							<h4><%= r.artist %></h4>
						</div>
					</div>
				<% end %>
			</li>
		<% end %>
	</ul>
</section>
<!-- End Portfolio -->