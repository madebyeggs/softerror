<section class="parallax-bg2 parallax colored clearfix marginUp2 paddedBottom">
	<div class="content dark container">
		
		<div class="title grid-full">
			<h2>Sign up</h2>
			<span class="border"></span>
		</div>
		<div class="grid-full">
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
			<div class="formWrapper">	
				<%= devise_error_messages! %>
				<%= f.label :email, class: "formText" %><br/>
	    		<%= f.email_field :email, class: 'email text-area' %><br /><br />
				<%= f.label :password, class: "formText" %><br />
	    		<%= f.password_field :password, class: 'email text-area' %><br /><br />
				<%= f.label :password_confirmation, class: "formText" %><br />
	    		<%= f.password_field :password_confirmation, class: 'email text-area' %><br /><br /><br />
			</div>
			<div class="title grid-full marginAfter">
				<%= f.submit "Sign up", class: "btn" %>
			</end>
		<% end %>
		</div>
	</div>
</section>