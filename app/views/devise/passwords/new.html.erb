<section class="parallax-bg2 parallax colored clearfix marginUp">
	<div class="content dark padded container">
		
		<div class="title grid-full">
			<h2>Forgot your password?</h2>
			<span class="border"></span>
		</div>
		
		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
			<div class="formWrapper">	
				<%= devise_error_messages! %>
				<%= f.label :email, class: "formText" %><br/>
	    		<%= f.email_field :email, class: 'email text-area' %><br /><br />
			</div>
			<div class="title grid-full">
	    		<%= f.submit "Send me reset password instructions", class: "darkButton3" %><br/><br/>
			</div>
		<% end %>
	</div>
</section>